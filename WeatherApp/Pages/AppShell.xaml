<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="WeatherApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:pages="clr-namespace:WeatherApp.Pages"
    Title="WeatherApp">
    
    <TabBar>
        <Tab>
            <ShellContent Title="Main" ContentTemplate="{DataTemplate pages:MainPage}" />
        </Tab>
        <Tab>
            <ShellContent Title="Settings" ContentTemplate="{DataTemplate pages:SettingsPage}" />
        </Tab>
    </TabBar>
</Shell>
